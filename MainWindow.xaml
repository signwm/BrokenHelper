<Window x:Class="BrokenHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Packet Listener" Height="160" Width="200">
    <DockPanel Margin="0">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Walki" Click="FightsMenuItem_Click" />
            <MenuItem Header="Instancje" Click="InstancesMenuItem_Click" />
        </Menu>
        <StackPanel Margin="10">
            <Button x:Name="startStopButton" Content="Start" Click="StartStopButton_Click" Width="94" Height="29"/>
            <Label x:Name="statusLabel" Content="Stopped" Margin="0,5,0,0" />
            <CheckBox x:Name="hudCheckBox" Content="Show HUD" Checked="HudCheckBox_Changed" Unchecked="HudCheckBox_Changed" Margin="0,5,0,0"/>
        </StackPanel>
    </DockPanel>
</Window>

<Window x:Class="BrokenHelper.InstancesDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista instancji" Height="600" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button x:Name="dayBefore" Content="&lt;" Width="25" Click="DayBefore_Click"/>
            <DatePicker x:Name="fromPicker" SelectedDateChanged="DateChanged"/>
            <DatePicker x:Name="toPicker" SelectedDateChanged="DateChanged"/>
            <Button x:Name="dayAfter" Content="&gt;" Width="25" Click="DayAfter_Click"/>
            <Button x:Name="today" Content="DziÅ›" Margin="5,0" Click="Today_Click"/>
            <Button x:Name="summary" Content="Podsumuj" Margin="5,0" Click="Summary_Click"/>
        </StackPanel>
        <DataGrid x:Name="grid" AutoGenerateColumns="False" DockPanel.Dock="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding StartTime}" Header="Start" ElementStyle="{StaticResource DataGridCellTextStyle}" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Nazwa" ElementStyle="{StaticResource DataGridCellTextStyle}" />
                <DataGridTextColumn Binding="{Binding Difficulty}" Header="Poziom" ElementStyle="{StaticResource DataGridCellTextStyle}" />
                <DataGridTextColumn Binding="{Binding Duration}" Header="Czas" ElementStyle="{StaticResource DataGridCellTextStyle}" />
                <DataGridTextColumn Binding="{Binding EarnedExp}" Header="Exp" ElementStyle="{StaticResource DataGridCellTextStyle}" />
                <DataGridTextColumn Binding="{Binding EarnedPsycho}" Header="Psycho" ElementStyle="{StaticResource DataGridCellTextStyle}" />
                <DataGridTextColumn Binding="{Binding FoundGold}" Header="Gold" ElementStyle="{StaticResource DataGridCellTextStyle}" />
                <DataGridTextColumn Binding="{Binding DropValue}" Header="Drop" ElementStyle="{StaticResource DataGridCellTextStyle}" />
                <DataGridTextColumn Binding="{Binding FightCount}" Header="Walki" ElementStyle="{StaticResource DataGridCellTextStyle}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
